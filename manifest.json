{
  "manifest_version": 3,
  "name": "Lexinoa 문장 순화 도우미",
  "description": "Lexinoa 웹 서비스와 연동되는 문장 순화 / 상황별 말투 도우미 확장 프로그램입니다.",
  "version": "1.0.0",

  "action": {
    "default_popup": "popup.html",
    "default_title": "Lexinoa"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "contextMenus",
    "cookies",
    "identity"
  ],

  "host_permissions": [
    "https://www.lexinoa.com/*",
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/context_detector.js"],
      "run_at": "document_idle"
    }
  ]
}
