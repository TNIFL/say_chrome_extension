{
  "manifest_version": 3,
  "default_locale": "ko",
  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "version": "1.1.0",

  "action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extTitle__"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "contextMenus",
    "identity"
  ],

  "host_permissions": [
    "https://www.lexinoa.com/*",
    "http://127.0.0.1:5000/*"
  ],

  "background": {
    "service_worker": "background.js"
  }
}
